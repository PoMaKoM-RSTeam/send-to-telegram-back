{
  "name": "send-to-telegram",
  "version": "1.0.0",
  "description": "back-end post management system for Telegram messenger",
  "main": "index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "prepare": "husky install",
    "prettier-write": "prettier --write ./",
    "prettier-check": "prettier --check ./",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoMaKoM-RSTeam/send-to-telegram-back.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "server",
    "posting",
    "database"
  ],
  "author": "PoMaKoM-RSTeam",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/PoMaKoM-RSTeam/send-to-telegram-back/issues"
  },
  "homepage": "https://github.com/PoMaKoM-RSTeam/send-to-telegram-back#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "express": "^4.17.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,ts,md,json,yml}": "prettier --write"
  }
}
